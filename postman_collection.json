{
  "info": {
    "name": "Order Execution Engine API",
    "description": "API collection for Order Execution Engine",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Execute Market Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 100\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        }
      }
    },
    {
      "name": "Execute Limit Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"limit\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 100,\n  \"limitPrice\": 1.05\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        }
      }
    },
    {
      "name": "Execute Order - Invalid Type",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"invalid\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 100\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        }
      }
    },
    {
      "name": "Execute Order - Missing Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"market\",\n  \"tokenIn\": \"SOL\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
